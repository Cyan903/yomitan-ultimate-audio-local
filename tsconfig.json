{
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig.json to read more about this file */
		"target": "es2021",
		"lib": [
			"es2021",
			"WebWorker"
		],
		"module": "es2022",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"env.d.ts",
		"src/**/*.ts"
	]
}
